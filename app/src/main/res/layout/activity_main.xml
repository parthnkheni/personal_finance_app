<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Stock Symbol (e.g., AAPL)"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:inputType="text"/>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Save"/>

            <Button
                android:id="@+id/viewPortfolioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Portfolio"/>

            <Button
                android:id="@+id/browseStocksButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Browse"/>
        </LinearLayout>

        <!-- Stock Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stockSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Symbol"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/stockName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/currentPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Price: $0.00"
                    android:textSize="18sp"
                    android:textColor="#00C853"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="10dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <!-- Financial Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="10dp"
            android:layout_marginBottom="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/openPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open: $0.00"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/highPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High: $0.00"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/lowPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low: $0.00"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/previousClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Close: $0.00"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
